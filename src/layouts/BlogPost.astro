---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
import { convertDate } from "../utils";

export interface Props {
  content: {
    title: string;
    description: string;
    pubDate?: string;
    updatedDate?: string;
    heroImage?: string;
  };
}

const {
  content: { title, description, pubDate, updatedDate, heroImage },
} = Astro.props;
---

<html lang='en'>
  <head>
    <BaseHead title={title} description={description} />
    <style>
      .title {
        font-size: 2em;
        margin: 0.25em 0 0;
      }
      hr {
        border-top: 1px solid #ddd;
        margin: 1rem 0;
      }
    </style>
  </head>

  <body
    class='bg-gradient-to-r from-black to-gray-800 h-screen overflow-y-scroll overflow-x-hidden'
  >
    <Header title={SITE_TITLE} />

    <main
      class='min-h-full bg-gradient-to-br from-slate-900 via-black to-gray-800'
    >
      <article
        class='max-w-screen-lg px-5 text-slate-300 mx-auto pt-16 sm:pt-24 md:px-20 md:pb-10'
      >
        {heroImage && <img width={720} height={360} src={heroImage} alt='' />}
        <h1
          class='text-4xl md:text-5xl max-w-2xl font-bold mb-4 text-slate-200'
        >
          {title}
        </h1>
        <div class='mb-8'>
          <time class='text-slate-400'>{convertDate(pubDate)}</time>
          <hr class='border-gray-400/40' />
        </div>
        {
          updatedDate && (
            <div>
              Last updated on <time>{updatedDate}</time>
            </div>
          )
        }
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
