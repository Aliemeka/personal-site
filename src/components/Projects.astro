---
// Projects.astro - A full-height projects section component

const projectsList = [
  {
    title: 'Dome Academy',
    description: 'A community-focused educational platform for developers, offering hands-on project-based learning and professional development resources.',
    tags: ['Next.js', 'Supabase', 'FastAPI'],
    bg: 'border-rose-500/50',
    color: 'hover:text-rose-400',
    link: '/projects/dome-academy'
  },
  {
    title: 'Spit.sh',
    description: 'A URL shortener with extra features including real-time analytics, custom domains, and QR code generation to enhance your online marketing efforts.',
    tags: ['TypeScript', 'Node.js', 'CLI'],
    bg: 'border-fuchsia-500/50',
    color: 'hover:text-fuchsia-400',
    link: '/projects/spit-sh'
  },
  {
    title: 'Sweet Savor',
    description: 'A food delivery service platform offering delicious meals at your convenience with a seamless ordering process.',
    tags: ['Nextjs', 'Django', 'Paystack API'],
    bg: 'border-emerald-500/50',
    color: 'hover:text-emerald-400',
    link: '/projects/sweet-savor'
  }
]
---

<section class="min-h-screen px-6 sm:px-8 py-20 sm:py-24 lg:py-32 md:px-20 relative z-20 border-t border-slate-800">
  <div>
    <h2 class="text-slate-200 text-4xl sm:text-5xl md:text-6xl mb-12 font-semibold">
      Recent Projects
    </h2>
    
    <div class="space-y-12">
      {
        projectsList.map(({ title, description, tags, bg, color, link }) =>(

        <div class={"border-l-2 pl-4 py-2" + bg}>
          <h3 class="text-slate-200 text-2xl mb-2">
            <a href={link} class={"transition duration-200" + color}>
              {title}
            </a>
          </h3>
          <p class="text-slate-400 mb-4 max-w-3xl">
            {description}
          </p>
          <div class="flex flex-wrap gap-2 mb-4">
            {
              tags.map((tag) => (
                <span class="px-3 py-1 text-xs rounded-full bg-slate-800 text-slate-300">
                  {tag}
                </span>
              ))
            }
          </div>
          <a 
            href={link}
            class="text-slate-500 hover:text-slate-200 hover:underline underline-offset-2 duration-200"
          >
            View project →
          </a>
        </div>)
        )
      }
    </div>
    
    <div class="mt-12 pt-6 border-t border-slate-800">
      <a 
        href="/projects" 
        class="text-slate-500 hover:text-slate-200 hover:underline underline-offset-2 duration-200"
      >
        See all projects →
      </a>
    </div>
  </div>
</section>
