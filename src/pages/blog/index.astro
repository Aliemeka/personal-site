---
import MainLayout from "../../layouts/MainLayout.astro";
import BlogCard from "../../components/BlogCard.astro";
import { compareDates } from "../../utils";
const allPosts = await Astro.glob("./*.md");
---

<MainLayout>
  <header
    class='px-6 sm:px-8 pt-20 sm:pt-24 md:px-20 relative z-30 max-w-screen-md md:mx-auto'
  >
    <h1 class='text-slate-200 text-4xl md:text-5xl text-left font-medium'>
      Emeka's Log
    </h1>
  </header>
  <section
    class='flex flex-col col-span-12 py-4 md:pb-20 px-6 sm:px-8 md:px-20 divide-y lg:col-span-6 divide-gray-400/40 mx-auto justify-center max-w-screen-md'
  >
    {
      allPosts
        .sort((a, b) =>
          compareDates(a.frontmatter.pubDate, b.frontmatter.pubDate),
        )
        .map((post) => (
          <BlogCard
            image={post.frontmatter.image}
            url={post.url!}
            title={post.frontmatter.title}
            description={post.frontmatter.description}
            date={post.frontmatter.pubDate}
          />
        ))
    }
  </section>
</MainLayout>
