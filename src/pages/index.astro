---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
---

<!DOCTYPE html>
<html lang='en'>
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body
    class='bg-gradient-to-r from-black to-gray-800 h-screen overflow-y-scroll'
  >
    <Header title={SITE_TITLE} />
    <main
      class='h-screen flex flex-col bg-gradient-to-br from-slate-900 via-black to-gray-800 relative z-30'
    >
      <header class='px-8 pt-32 md:px-20 md:pt-42'>
        <h1
          class='text-slate-200 text-5xl sm:text-7xl md:text-8xl lg:text-[115px] text-left'
        >
          Entrepreneur, Developer, Creator, Builder and Teacher.
        </h1>
        <p class='md:w-1/3 text-slate-300 mt-4'>
          I build solutions for web3, finance and ed-tech using Python,
          Typescript, and Rust. I prefer Next.js and FastAPI for web development
          and Google Cloud Platform for cloud computing.
        </p>
      </header>
      <section class='w-full flex justify-end pr-8 md:pr-20 flex-1 items-end'>
        <img src='/Emeka.png' alt='Me' class='md:w-[600px] lg:w-[650px]' />
      </section>
    </main>
    <Footer />
  </body>
</html>
